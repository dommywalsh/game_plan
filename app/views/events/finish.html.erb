<div>
  <div class="end-game-container" style="justify-content: center">
    <h4><%=@event.name%> is over! </h4>
  </div>
  <div class="d-flex finish-content">
    <div class="text-placings">
      <div class="congrats-text">
        <h2>Congratuations!</h2>
        <p>Much fun was had. Someone won, others lost. Tell us who they were!</p>
      </div>
      <div class="placings-area">
        <%= form_with url: submit_scores_event_path(@event) do |form| %>
          <div>
            <%= form.label :first_place, "1st place:" %>
            <%= form.select :first_place, @event.participants %>
          </div>
          <div>
            <%= form.label :second_place, "2nd place:" %>
            <%= form.select :second_place, @event.participants %>
          </div>
          <%= form.submit "Submit", class: "btn-join" %>

        <% end %>
      </div>
    </div>
    <div class="players-in-game">
      <h5>This game of <%= @event.game.name %>'s players were:</h5>
      <div class="players-game">
        <% @event.players.each do |player| %>
          <div class="end-game-chit">
              <%= cl_image_tag player.user.profile_pic.key, class: "avatar-large" %>
              <%= player.user.first_name %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

<%#           <div class="confetti-button btn btn-join">Click me!</div> %>
</div>
