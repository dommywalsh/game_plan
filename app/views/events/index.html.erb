<div class="d-flex">
  <div class="card-box">
    <br>
    <h4 style="text-align:center">Pick the game to join!</h4>
    <div class="d-flex map-card-container">
      <div class="mt-4 card-overflow bar">
        <%= form_with url: events_path, method: :get, class: "d-flex" do |f| %>
          <div class="form-control">
            <%= f.text_field :query, placeholder: "Enter location" %>
          </div>
          <div class="form-control">
            <%= f.collection_select(:gamefilter, @games, :name, :name, prompt: true) %>
          </div>
          <div class="form-control">
            <%= f.text_field :date_input, data: { controller: "flatpicker" }, placeholder: "Select date" %>
          </div>
          <%= submit_tag "Search", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
    <div class="cards d-grid p-2">
      <% @events.each do |event| %>
        <%= render "card", event: event %>
      <% end %>
    </div>
  </div>
  <div style="width: 35%; height: 100vh;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
