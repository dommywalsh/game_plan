<br>

<h4 style="text-align: center">Dashboard</h4>



<div class="d-flex">
<% #container for whole page  %>

<div>
<% #container for notifications, booked, hosted %>

  <div class="border border-danger">
  <% #container for event requests  %>
    <% if @events %>
      <% @events.each do |event | %>
        <% if event.players.pending.first %>
          <% event.players.pending.each do |player| %>
          <div>
              <div class="d-flex justify-content-between border border-danger">
                <p><%= player.user.username %> wants to join <%= event.name %></p>
                  <div class="d-flex justify-content-end border border-danger">
                      <p class="remove-text-decoration"><%= button_to "✅", accept_event_player_path(event, player), method: :patch %></p>
                      <p class="remove-text-decoration"><%= button_to "❌", reject_event_player_path(event, player), method: :patch %></p>
                  </div>
              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
     <% # end of container for event requests %>
  </div>

  <div class="p-3">
  <% # outer container for hosted events %>

    <h3>Hosted games:</h3>
    <div class="d-flex">
      <% # inner container for hosted events %>

        <% if @events %>
          <% @events.each do |event | %>
            <div class="card-myspace border border-dark border-3 p-3 rounded">
              <h4><%= link_to event.name, event_path(event) %></h4>
            </div>
          <% end %>
        <% end %>
      <% # end of inner container for hosted events %>
    </div>
  <% # end of outer container for hosted events %>
  </div>

  <div class="p-3">
    <% # outer container for booked events %>
    <h2>Booked events:</h2>
    <div class="d-flex">
      <% # inner container for booked events %>
        <%if @user.accepted_events %>
          <% @user.accepted_events.each do |player| %>
            <div class="card-myspace border border-dark border-3 p-3 rounded">
              <%= link_to player.event.name, event_path(player.event) %>
            </div>
          <% end %>
        <% end %>
      <% # end of inner container for booked events %>
    </div>


    <% # end of outer container for booked events %>
  </div>

<% #container for notifications, booked, hosted %>
</div>

<% #end of container for whole page  %>
</div>









<% #container for hosted events %>
<div class="container mt-4 ">
  <% if @events%>
    <h3>Hosted games:</h3>
    <div class="cards d-grid p-2">

      <% @events.each do |event| %>
        <div class="card-myspace border border-dark border-3 p-3 rounded">
          <h4><%= link_to event.name, event_path(event) %></h4>
          <h6 class="text-dark mt-4" >Current accepted players:</h6>
          <% if event.players.confirmed.first %>
            <% event.players.confirmed.each do |player| %>
              <div>
                <div class="d-flex justify-content-between">
                    <%= player.user.email %>
                </div>
              </div>
            <% end %>
          <% end %>

          <h6 class="text-dark mt-4">Event requests:</h6>
          <% if event.players.pending.first %>
            <% event.players.pending.each do |player| %>
              <div>
                <div class="d-flex justify-content-between">
                    <%= player.user.email %>
                    <div class="d-flex justify-content-end">
                      <p class="remove-text-decoration"><%= button_to "✅", accept_event_player_path(event, player), method: :patch %></p>
                      <p class="remove-text-decoration"><%= button_to "❌", reject_event_player_path(event, player), method: :patch %></p>
                    </div>
                </div>
              </div>
            <% end %>
          <% end %>

        </div>
      <% end %>
    </div>
    <% else %>
      <div class="card-product">
        <div class="card-product-infos">
          <h2>You are not currently hosting any events</h2>
        </div>
      </div>
  <% end %>

  <% #container for events you're booked into %>
  <h2>Booked events:</h2>
  <div class="cards d-grid p-2">
      <%if @user.accepted_events %>
        <div class="card-myspace border border-dark border-3 p-3 rounded">
          <h2>Confirmed bookings</h2>
            <ol>
              <div class="container mt-4 ">
                <% @user.accepted_events.each do |player| %>
                  <li><%=player.event.name %></li>
                <% end %>
              </div>
            </ol>
        </div>
        <div class="card-myspace border border-dark border-3 p-3 rounded">
          <h2>Pending bookings</h2>
            <ol>
              <div class="container mt-4 ">
                <% @user.pending_events.each do |player| %>
                  <li><%=player.event.name %></li>
                <% end %>
              </div>
            </ol>
        </div>
      <%end%>
  </div>

</div>
