<ul class="nav nav-tabs mt-5 justify-content-center" id="myTab" role="tablist">

<% @games.each_with_index do |game, index| %>
  <li class="nav-item" role="presentation">
    <button class="nav-link <%= index == 0 ? 'active' : '' %>" data-bs-toggle="tab" data-bs-target="#<%= game.name.tr("0-9", "").parameterize %>" type="button" role="tab" aria-controls="<%= game.name %>"  aria-selected="true"><%=game.name%></button>
  </li>
<% end %>

</ul>
<div class="tab-content" id="myTabContent">
  <% @games.each_with_index do |game, index| %>
    <div class="tab-pane fade <%= index == 0 ? 'show active' : '' %>" id="<%= game.name.tr("0-9", "").parameterize %>" role="tabpanel" tabindex="0"> <%= render "leaderboard", game: game %> </div>
  <% end %>
</div>
