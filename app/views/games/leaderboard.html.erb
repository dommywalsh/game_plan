<div class="container">
  <h1><%= @game.name %> leaderboard</h1>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">First</th>
          <th scope="col">Last</th>
          <th scope="col">Rating</th>
        </tr>
      </thead>
      <tbody>
        <% @player_scores.each_with_index do |user_rating, index| %>
        <tr>
          <th scope="row"><%=index + 1%></th>
          <th><%=user_rating.user.first_name%> </th>
          <th><%= user_rating.user.second_name%> </th>
          <th><%= user_rating.rating %></th>
        </tr>
        <% end %>

      </tbody>
    </table>
  </div>
